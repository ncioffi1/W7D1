<h1>Create New Cat</h1>
<form action="<%= cats_url %>" method="POST">
  <label for="name"> Name:
    <input type="text" id="name" name="cat[name]" value= "<%=@cat.name%>">
  </label>
  <br>
  <label for="color">Color:
    <select name="cat[color]" id="color">
    <option disabled selected>-- Please Select --</option>
    <option value="brown">Brown</option>
    <option value="orange">Orange</option>
    <option value="black">Black</option>
    <option value="white">White</option>
    <option value="multi">Multi</option>
    </select>
  </label>
  <br>
  <label for="birth_date"> Birthdate: 
    <input type="date" id="birth_date" name="cat[birth_date]" value= "<%=@cat.birth_date%>">
  </label>
  <br>
  <p>Please select your Sex:</p>
  <input type="radio" id="sex1" name="cat[sex]" value="M">
  <label for="sex1">M</label><br>
  <input type="radio" id="sex2" name="cat[sex]" value="F">
  <label for="sex2">F</label><br><br>
  <br>
  <label for="description"> Description: 
    <textarea name="cat[description]"></textarea>
  </label>


  <input type="submit" value="Create Cat">
</form>



